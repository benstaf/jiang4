---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget -->
  <HeroText tagline="Contact" title="Let's Connect!" />

  <!-- Features2 Widget: Email & WeChat -->
  <Features2
    title="Get in Touch"
    items={[
      {
        title: 'Email',
        description: 'info@jiangstreet.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Telegram',
        description: '@jiangsteet',
        icon: 'tabler:message',
      },
    ]}
  />

  <!-- WeChat QR Code Image -->
  <div class="flex justify-center mt-6">
    <img src="/images/wechat.jpg" alt="WeChat QR Code" class="w-48 h-48 rounded-lg shadow-lg" />
  </div>
</Layout>
